<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="lunabot">

    <!-- ===============================
         Shared inertial helper macros
         (box, cylinder, sphere)
         =============================== -->
    <xacro:include filename="inertial_macros.xacro"/>
    <xacro:include filename="lunabot_ros2_control.xacro"/>
    <!-- ===============================
         Materials (visual only)
         =============================== -->
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- ===============================
         BASE LINK
         Conceptual reference frame only.
         No geometry on purpose.
         This is the root of the TF tree.
         =============================== -->
    <link name="base_link"/>

    <!-- ===============================
         CHASSIS
         Represents the rover body.
         Dimensions are approximate.
         =============================== -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <!-- chassis sits slightly above ground -->
        <origin xyz="0 0 0.15"/>
    </joint>

    <link name="chassis">
        <visual>
            <geometry>
                <!-- Rough Lunabot body -->
                <box size="0.8 0.55 0.2"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.8 0.55 0.2"/>
            </geometry>
        </collision>

        <!-- Not physically accurate.
             Exists for simulation stability -->
        <xacro:inertial_box mass="20.0" x="0.8" y="0.55" z="0.2">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- ===============================
         WHEEL MACRO
         All four wheels are identical.
         Skid steer control is handled in software.
         =============================== -->
    <xacro:macro name="wheel" params="name x y z">
        <joint name="${name}_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${name}"/>
            <!-- rotate cylinder so it spins correctly -->
            <origin xyz="${x} ${y} ${z}" rpy="-${pi/2} 0 0"/>
            <axis xyz="0 0 1"/>
        </joint>

        <link name="${name}">
            <visual>
                <geometry>
                    <!-- ~10 inch wheel -->
                    <cylinder radius="0.127" length="0.1"/>
                </geometry>
                <material name="blue"/>
            </visual>

            <collision>
                <geometry>
                    <cylinder radius="0.127" length="0.1"/>
                </geometry>
            </collision>

            <!-- Simplified inertia -->
            <xacro:inertial_cylinder mass="2.0" length="0.1" radius="0.127">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder>
        </link>
    </xacro:macro>

    <!-- ===============================
         FOUR WHEELS (4WD, skid steer)
         =============================== -->

    <!-- Front Left -->
    <xacro:wheel name="front_left_wheel"  x="0.35"  y="0.325" z="0"/>

    <!-- Front Right -->
    <xacro:wheel name="front_right_wheel" x="0.35"  y="-0.325" z="0"/>

    <!-- Rear Left -->
    <xacro:wheel name="rear_left_wheel"   x="-0.35" y="0.325" z="0"/>

    <!-- Rear Right -->
    <xacro:wheel name="rear_right_wheel"  x="-0.35" y="-0.325" z="0"/>

    <!-- ===============================
         LIFT + BUCKET ASSEMBLY
         Simplified representation of the
         lift arm, bucket, and actuators.
         =============================== -->
    <joint name="lift_joint" type="revolute">
        <parent link="chassis"/>
        <child link="lift_arm"/>
        <!-- Lift pivot near the front-top of chassis -->
        <origin xyz="0.3 0 0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-0.5" upper="1.2" effort="200" velocity="1.0"/>
    </joint>

    <link name="lift_arm">
        <visual>
            <geometry>
                <box size="0.6 0.15 0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.15 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="6.0" x="0.6" y="0.15" z="0.1">
            <origin xyz="0.15 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="bucket_joint" type="revolute">
        <parent link="lift_arm"/>
        <child link="bucket"/>
        <!-- Bucket hinge at front of arm -->
        <origin xyz="0.3 0 0.05" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-1.2" upper="0.8" effort="150" velocity="1.0"/>
    </joint>

    <link name="bucket">
        <visual>
            <geometry>
                <box size="0.35 0.4 0.2"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.35 0.4 0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="4.0" x="0.35" y="0.4" z="0.2">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- Lift actuator (visual only) -->
    <joint name="lift_actuator_joint" type="fixed">
        <parent link="chassis"/>
        <child link="lift_actuator"/>
        <origin xyz="0.1 0 0.1" rpy="0 ${pi/2} 0"/>
    </joint>

    <link name="lift_actuator">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.45"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.45"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1.0" length="0.45" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Tilt actuator (visual only) -->
    <joint name="tilt_actuator_joint" type="fixed">
        <parent link="lift_arm"/>
        <child link="tilt_actuator"/>
        <origin xyz="0.2 0 -0.05" rpy="0 ${pi/2} 0"/>
    </joint>

    <link name="tilt_actuator">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.3"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.3"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.6" length="0.3" radius="0.025">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

</robot>
